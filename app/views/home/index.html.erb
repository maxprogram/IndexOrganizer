<% provide(:title, "Index page number management") %>

	
	<h2>Adjust page numbers</h2>
		<p>
			<label>Input page:</label>
			<input type="text" id="input_page" />
		</p>
		<p>
			<label># of pages:</label>
			<input type="text" id="input_pages" />
		</p>
		<p>
			<button id="changeButton">Change</button>
		</p>
	
	<h2>Edit Reference</h2>
		<p>
			<label>Reference name:</label>
			<input type="text" id="" />
		</p>
		<p>
			<label>Pages:</label>
			<input type="text" id="" />
		</p>
		
	
	<table id="original">
		<tr class="head">
			<th style="width:250px">Reference</th>
			<th>Pages</th>
		</tr>
