<% provide(:title, "Index page number management") %>

<div class="row-fluid sticky">

	<div class="span4" id="editReference">
		<h3>Edit Reference</h3>
		<form id="edit">
		<p>
			<div class="pull-left">
				<label>Level:</label>
				<input type="text" id="level" class="input-mini" />
			</div><div class="pull-left">
				<label>Reference name:</label>
				<input type="text" id="name" />
			</div>
		</p>
		<p class="pull-left">
			<label>Pages:</label>
			<input type="text" id="pages" class="input-xlarge" autocomplete="off" />
		</p>
		<div class="bottom-buttons">
			<input type="submit" class="btn btn-primary update" value="Update"/>
			<button class="btn btn-danger remove" type="button">Remove</button>
			<button class="btn add" type="button">Add new</button>
		</div>
		</form>
	</div>

	<div class="span4" id="findAdd">
		<h3>Find/add:</h3>
		<form id="find">
			<label>Find reference:</label>
			<input type="text" id="searchRefs" autocomplete="off" />
			<label>Add new pages:</label>
			<input type="text" id="addnew" autocomplete="off" />
			<input type="submit" class="btn btn-primary update" value="Update"/>
		</form>
	</div>

	<div class="span4" id="pageNums">
		<h3>Adjust page numbers</h3>
		<form id="adjust" action="/adjust" method="post">
		<p><div class="pull-left">
			<label>Input page:</label>
			<input type="text" name="input_page" />
		</div></p>
		<p class="pull-left">
			<label># of pages:</label>
			<input type="text" name="input_pages" />
		</p>
		<div class="bottom-buttons">
			<input class="btn btn-primary" type="submit" value="Change"/>
			<div class="btn-group" data-toggle="buttons-radio">
				<button class="btn btn-warning active" type="button" id="convertP">Pages</button>
				<button class="btn btn-warning" type="button" id="convertL">Letters</button>
			</div>
		</div>
		</form>
	</div>

	<div class="row-fluid">
	<div class="span6">
		<ul class="nav nav-pills" id="listNav">
			<li class="active"><a href="topics">Topics</a></li>
			<li><a href="companies">Companies</a></li>
			<li><a href="people">People</a></li>
			<li><a href="letters">Letters</a></li>
		</ul>
	</div>
	<div class="span6">
		<div class="btn-group pull-right">
			<a href="/letters-hash" class="btn">Letter page hash</a>
			<a href="/csv?t=topics" class="btn" id="csvLink">CSV of current view</a>
		</div>
	</div>
	</div>

	<div class="shadow"></div>
</div>

<div class="row-fluid moving">
	<div class="span12">

		<table id="index" class="table table-bordered table-condensed">
			<tr class="head">
				<th style="width:50px">Lvl</th>
				<th style="width:350px">Reference</th>
				<th style="width:300px">Pages</th>
				<th>Add new pages</th>
			</tr>
		</table>

	</div>
</div>


